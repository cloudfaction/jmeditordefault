<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" group="system" method="upgrade">
    <name>JM Default editor</name>
    <author>Maarten Blokdijk</author>
    <creationDate>December 2024</creationDate>
    <copyright>(C) 2024 Maarten Blokdijk. All rights reserved.</copyright>
    <license>GNU General Public License version 2 or later</license>
    <authorEmail>hello@jmodules.com</authorEmail>
    <authorUrl>www.jmodules.com</authorUrl>
    <version>1.0.0</version>
    <description>Sets switch for default editor in content and modules</description>

    <files>
        <filename plugin="jmeditordefault">jmeditordefault.php</filename>
    </files>

    <config>
        <fields name="params">
            <fieldset name="basic">
                <field
                    name="show_switch_button"
                    type="radio"
                    label="Show Editor Switch"
                    description="Show or hide the editor switch button"
                    default="1"
                    class="btn-group btn-group-yesno"
                >
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension> 